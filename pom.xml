<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>GlimpseSmartBuildingProbe</groupId>
  <artifactId>GlimpseSmartBuildingProbe</artifactId>
  <version>0.0.5-SNAPSHOT</version>
  <name>GlimpseSmartBuildingProbe</name>
  <description>A probe for sending events generated by smart building sensors to the Glimpse monitoring platform.</description>
  <url>https://github.com/acalabro/GlimpseSmartBuildingProbe.git</url>
  <organization>
  	<name>LABSEDC - ISTI CNR</name>
  	<url>http://labsedc.isti.cnr.it</url>
  </organization>
  	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5</version>
				<configuration>
					<source>11</source>
					<target>11</target>                                  
				</configuration>
			</plugin>				
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>it.cnr.isti.labsedc.glimpse.example.MyGlimpseDockerProbe</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>docker-maven-plugin</artifactId>
    			<version>1.1.1</version>
    			<executions>
	    			<execution>
	    			<phase>package</phase>
	    			<goals>
	    				<goal>build</goal>
	    			</goals>
	    			</execution>
    			</executions>
    			<configuration>
    				<imageName>acalabro/glimpseprobe</imageName>
    				<baseImage>openjdk:11-slim</baseImage>
    				<entryPoint>
    					["java", "-jar", "/opt/${project.build.finalName}-jar-with-dependencies.jar"]
    				</entryPoint>
    				<serverId>docker-hub</serverId>
    				<registryUrl>https://index.docker.io/v1/</registryUrl>    		
    				<resources>
	    				<resource>
	    					<targetPath>/opt/</targetPath>
		    				<directory>${project.build.directory}</directory>
		    				<excludes>
			    				<exclude>target/**/*</exclude>
			    				<exclude>pom.xml</exclude>
			    				<exclude>*.iml</exclude>
		    				</excludes>
		    				<include>${project.build.finalName}-jar-with-dependencies.jar</include>
	    				</resource>	
    				</resources>		
    			</configuration>
    		</plugin>
		</plugins>
	</build>
  <dependencies>
		<dependency>	
		    <groupId>org.apache.activemq</groupId>
		    <artifactId>activemq-all</artifactId>
		    <version>5.15.6</version>
		</dependency>
		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>javax.jms-api</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.xmlbeans</groupId>
			<artifactId>xmlbeans</artifactId>
			<version>2.6.0</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xerces</artifactId>
			<version>2.4.0</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.3.04</version>
		</dependency>
		<dependency>
			<groupId>it.cnr.isti.labsedc</groupId>
			<artifactId>ComplexEventException</artifactId>
			<version>0.0.1</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/ComplexEventException.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>it.cnr.isti.labsedc</groupId>
			<artifactId>ComplexEventResponse</artifactId>
			<version>0.0.1</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/ComplexEventResponse.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>it.cnr.isti.labsedc</groupId>
			<artifactId>ComplexEventRule</artifactId>
			<version>0.0.1</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/ComplexEventRule.jar</systemPath>
		</dependency>
	  			<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20151123</version>
		</dependency>
		<dependency>
		    <groupId>com.fasterxml.jackson.core</groupId>
		    <artifactId>jackson-databind</artifactId>
		    <version>2.9.7</version>
		</dependency>
  </dependencies>
</project>